{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Azure CLI Script",
	"patterns": [			
		{
			"include": "#comments"
		},
		{
			"include": "#commands"
		},
		{
			"include": "#strings1"
		},
		{
			"include": "#strings2"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#file"
		},
		{
			"include": "#parameters"
		}		
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"comment": "comment line",
            		"match": "#[^\\n]*",
            		"name": "comment.line"
				}	
			]            
		},
		"parameters": {
			"patterns": [
				{
					"comment": "parameter",
					"match": "^([^:]*):",
					"captures": {
						"1": {
							"name": "variable.parameter"
						}
					}
				}
			]
		},
		"commands": {
			"patterns": [
				{
					"comment": "resource-action-name line",
					"match": "^(.*\\s+)*([\\w|-]+)\\s+([\"|'][\\w|-]*[\"|'])",
					"captures": {
						"1": {
							"name": "keyword.other"
						},
						"2": {
							"name": "entity.name.function"
						},
						"3" :
						{
							"name": "string.quoted"
						}
					}
				}
			]
		},
		"variables": {
			"patterns": [
				{
					"comment": "variables",
					"match": "\\$[\\w|-]*",
					"name": "variable.name"
				}
			]
		},
		"file": {
			"patterns": [
				{
					"comment": "file reference",
					"match": "@.*",
					"name": "emphasis"
				}
			]
		},
		"strings2": {
			"name": "string.quoted.double.azs",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.azs",
					"match": "\\\\."
				}
			]
		},
		"strings1": {
			"name": "string.quoted.single.azs",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "constant.character.escape.azs",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.azs"
}